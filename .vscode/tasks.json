{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "npm",
            "type": "shell",
            "args": [
                "run",
                "webpack"
            ],
            "problemMatcher": [
                "$tsc"
            ],
            "presentation": {
                "reveal": "always"
            },
            "group": "build"
        },
        {
            "type": "npm",
            "label": "Lint",
            "script": "tslint",
            "group": "none",
            "presentation": {
                "echo": true,
                "reveal": "never",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true
            },
            "problemMatcher": [
                "$tslint5"
            ]
        }
    ]
}